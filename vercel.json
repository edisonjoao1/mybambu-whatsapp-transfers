{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "src/server.ts",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/health",
      "dest": "src/server.ts",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
